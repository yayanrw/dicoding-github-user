<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midnight_blue_800</item>
        <item name="colorPrimaryVariant">@color/midnight_blue_800</item>
        <item name="colorOnPrimary">@color/amethyst_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amethyst_400</item>
        <item name="colorSecondaryVariant">@color/amethyst_400</item>
        <item name="colorOnSecondary">@color/midnight_blue_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/amethyst_200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.SubTitle">
        <item name="android:textColor">@color/amethyst_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.SubTitle.Light">
        <item name="android:textColor">@color/amethyst_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCenterHorizontal.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/amethyst_200</item>
    </style>

    <style name="TextCenterHorizontal.Title.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextCenterHorizontal.SubTitle">
        <item name="android:textColor">@color/amethyst_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="IconSmall">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:tint">@color/amethyst_200</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="backgroundTint">#00FFFFFF</item>
        <item name="tint">@color/amethyst_200</item>
    </style>

    <style name="TabsCustom">
        <item name="android:background">@color/midnight_blue_800</item>
        <item name="tabTextColor">@color/amethyst_200</item>
        <item name="tabIndicatorColor">@color/amethyst_400</item>
    </style>
</resources>