<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/midnight_blue_800</item>
        <item name="colorPrimaryVariant">@color/midnight_blue_800</item>
        <item name="colorOnPrimary">@color/amethyst_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amethyst_400</item>
        <item name="colorSecondaryVariant">@color/amethyst_400</item>
        <item name="colorOnSecondary">@color/midnight_blue_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Title">
        <item name="android:textColor">@color/amethyst_200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Title.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextContent.SubTitle">
        <item name="android:textColor">@color/amethyst_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.SubTitle.Light">
        <item name="android:textColor">@color/amethyst_200</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.SubTitle.Big">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextCenterHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextCenterHorizontal.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/amethyst_200</item>
    </style>

    <style name="TextCenterHorizontal.Title.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextCenterHorizontal.SubTitle">
        <item name="android:textColor">@color/amethyst_400</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AvatarSmall">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="AvatarBig">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="IconSmall">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:tint">@color/amethyst_200</item>
    </style>

    <style name="Button.Primary" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorAccent">@color/amethyst_700</item>
        <item name="android:backgroundTint">@color/amethyst_700</item>
        <item name="android:textColor">@color/amethyst_200</item>
    </style>

</resources>